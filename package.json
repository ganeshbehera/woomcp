{
  "name": "woocommerce-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:sse": "node build/sse-server.js",
    "start:mcp": "SERVER_MODE=mcp node build/sse-server.js",
    "start:http": "SERVER_MODE=http node build/sse-server.js",
    "dev": "npm run build && npm start",
    "dev:sse": "npm run build && npm run start:sse"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techspawn/woocommerce-mcp-server.git"
  },
  "author": "techspawn",
  "description": "MCP server for WooCommerce integration with SSE support"
}
